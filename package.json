{
  "name": "@ronp001/ts-utils",
  "version": "1.0.1",
  "description": "miscellaneous typescript modules",
  "repository": "http://github.com/ronp001/ts-utils",
  "author": "Ron Perry",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist/",
    "relink": "yarn unlink && yarn link",
    "test:integration": "jest --testRegex 'src(/__(integration_)?tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$' 'src/__integration_tests__/integration.test.ts'",
    "test": "jest",
    "build": "tsc",
    "build:production": "yarn clean; yarn build; yarn test; yarn pack",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.104",
    "isbinaryfile": "^3.0.2",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/mock-fs": "^3.6.30",
    "jest": "^23.4.0",
    "mock-fs": "^4.4.2",
    "ts-jest": "^23.1.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}